<%= form_with url: searches_path, method: :get, local: true do %>
  <div class="mb-3">
    <div class="form-group position-relative" style="margin-top: 4px; margin-bottom: 0px !important;">
      <i class="fas fa-search position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
      <%= text_field_tag :query, params[:query], class: "form-control pl-5", style: "height: 55px; border-radius: 10px;", placeholder: "キーワード入力後Enterで検索(ユーザー名、ポートフォリオ名)" %>
    </div>
  </div>
  <%#= submit_tag "検索", class: "btn btn-primary" %>
<% end %>