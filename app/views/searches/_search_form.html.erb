      <%= form_with url: searches_path, method: :get, local: true do %>
        <div class="mb-3">
          <%= label_tag :query, "ポートフォリオを検索", class: "form-label" %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "ポートフォリオ名を入力" %>
        </div>
        <%= submit_tag "検索", class: "btn btn-primary" %>
      <% end %>