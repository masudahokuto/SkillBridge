<!-- 新規タグ登録モーダル -->
<div class="modal fade" id="newSkillTagModal" tabindex="-1" role="dialog" aria-labelledby="newSkillTagModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title ml-auto" id="newSkillTagModalLabel">タグを新規作成</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex justify-content-center">
        <%= form_with(model: SkillTag.new, local: true, url: skill_tags_path) do |f| %>
          <div>
            <%= f.label :skill_tag_image, "タグ画像" %>
          </div>
          <div class="mb-3">
            <%= f.file_field :skill_tag_image %>
          </div>
          <div class="form-group">
            <%= f.label :name, "タグ名" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
          <div　class="d-flex justify-content-center">
            <%= f.submit "作成", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 新しいタグを追加するボタン -->
<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#newSkillTagModal">
  新しいスキルタグを追加
</button>
