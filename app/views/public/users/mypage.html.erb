
<%= @user.nick_name %>
<%= @user.profile %>
<%= I18n.t("activerecord.attributes.user.gender.#{@user.gender}") %>
<%= @user.location %>
<%= @user.birthday %>
<%= @user.email %>
<%= I18n.t("activerecord.attributes.user.work_experience.#{@user.work_experience}") %>
<% if @qualifications.any? %>
  <ul>
    <% @qualifications.each do |qualification| %>
      <li><%= qualification.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>資格は登録されていません。</p>
<% end %>

<%= link_to "タグ一覧", skill_tags_path %>

<ul>
  <% @portfolios.each do |portfolio| %>
    <li>
      <%= link_to portfolio.name, portfolio_path(portfolio) %> <!-- 詳細ページへのリンク -->
    </li>
  <% end %>
</ul>